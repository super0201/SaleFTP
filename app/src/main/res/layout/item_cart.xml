<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/_1sdp"
    android:background="@color/colorAzure1"
    android:weightSum="10">

    <LinearLayout
        android:gravity="center"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imvCart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:layout_margin="@dimen/_3sdp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tên điện thoại"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tvNameCart"
            android:textSize="@dimen/_17sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tvPriceCart"
            android:textSize="@dimen/_11sdp"
            android:text="Giá ở đây nè"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:focusable="false"
                android:id="@+id/btnMinus"
                android:background="@color/colorPrimary"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <TextView
                android:hint="số lượng"
                android:gravity="center"
                android:background="@null"
                android:focusable="false"
                android:id="@+id/tvAmount"
                android:layout_marginTop="5dp"
                android:textSize="30sp"
                android:text=""
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <Button
                android:focusable="false"
                android:id="@+id/btnPlus"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:text="+"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imvDel"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@raw/ic_close" />

</LinearLayout>