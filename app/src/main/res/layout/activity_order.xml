<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@raw/arrows"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSilver"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="@dimen/_295sdp"
                    android:layout_height="wrap_content"
                    android:text="Thông tin đặt hàng"
                    android:textAlignment="center"
                    android:textSize="@dimen/_18sdp"/>

                <ImageView
                    android:id="@+id/imvInfoOrder"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@android:drawable/ic_menu_edit" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtNameOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên" />

            <EditText
                android:id="@+id/edtPhoneOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số điện thoại" />

            <EditText
                android:id="@+id/edtAddressOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ" />
        </LinearLayout>

        <ListView
            android:id="@+id/lvOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </ListView>

        <TextView
            android:id="@+id/tvAmountOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng sản phẩm" />

        <TextView
            android:id="@+id/tvTotalOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền" />

        <Button
            android:id="@+id/btnOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt hàng" />

    </LinearLayout>
</LinearLayout>